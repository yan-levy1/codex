// Prisma schema for Products and Images

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  details     Json
  images      Image[]
}

model Image {
  id          String   @id @default(uuid())
  url         String
  description String
  product     Product  @relation(fields: [productId], references: [id])
  productId   String
}
